<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yelll"
    android:orientation="vertical"
    android:padding="3dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/curve_shap_back"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <TextView
                    android:id="@+id/tvtitle"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="15"
                    android:background="@drawable/curve_shap_red"
                    android:gravity="center"
                    android:text="Weight Record"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/bsetting"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_weight="85"
                    android:background="@drawable/setting"
                    android:gravity="center"
                    android:textSize="25dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <EditText
                        android:id="@+id/etWeight"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="25"
                        android:background="@drawable/curve_shap_yello"
                        android:hint="Enter Your Weight Here :"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:textSize="25dp"
                        android:textStyle="italic|bold" />

                    <Button
                        android:id="@+id/bSave"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="75"
                        android:background="@drawable/right_custom"
                        android:gravity="center" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="7dp"
                    android:background="#c0c0c0" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">


                    <Button
                        android:id="@+id/bView"
                        android:layout_width="85dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/view"
                        android:gravity="center"
                        android:text="Data" />


                </LinearLayout>

            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:background="#c0c0c0" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/tvDate2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="3dp"
                        android:layout_weight="65"
                        android:background="#ffff8987"
                        android:gravity="center"
                        android:text="date"
                        android:textSize="30dp"
                        android:textStyle="bold|italic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="35"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="50"
                            android:background="#ff26fb28"
                            android:gravity="center"
                            android:text="Past Weight "
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="18dp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/tvShowPastWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="115.6 Kg"
                            android:textSize="30dp"
                            android:textStyle="bold|italic" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="35"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="50"
                            android:background="#ffb9b2ff"
                            android:gravity="center"
                            android:text="Weight Now"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="18dp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/tvShowCurrentWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:freezesText="true"
                            android:gravity="center"
                            android:text=""
                            android:textSize="30dp"
                            android:textStyle="bold|italic" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="65"
                        android:background="#ffff8987"
                        android:gravity="center"
                        android:text="date"
                        android:textSize="30dp"
                        android:textStyle="bold|italic" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvIntialWeightDiff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="50"
                        android:background="#ff26fb28"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:text="Initial Weight Diff "
                        android:textSize="18dp"
                        android:textStyle="italic"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvReducedWeigth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:background="#ff88fff0"
                        android:gravity="center"
                        android:text="ABC"
                        android:textSize="30dp"
                        android:textStyle="bold|italic"
                        android:typeface="sans"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCurrentWeightDiff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="50"
                        android:background="#ffb9b2ff"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:text="Current Weight Diff"
                        android:textSize="18dp"
                        android:textStyle="italic"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvRelativeWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:background="#ff88fff0"
                        android:gravity="center"
                        android:text="XYZ"
                        android:textSize="30dp"
                        android:textStyle="bold|italic"
                        android:typeface="sans"
                        android:visibility="visible" />

                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>
