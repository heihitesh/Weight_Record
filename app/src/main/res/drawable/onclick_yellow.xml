<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#fff6fa55" />
            <stroke
                android:width="1dp"
                android:color="#ff222222" />
            <corners
                android:radius="50dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="ring"
            >
            <gradient
                android:startColor="#ffeeed34"
                android:endColor="#ffb3af4d"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ffd4cf4f" />
            <corners
                android:radius="50dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>